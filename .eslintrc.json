{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-var": ["error"],
        "valid-jsdoc": ["warn", {
            "requireReturn": false,
            "requireReturnDescription": false,
            "prefer": {
                "return": "returns",
                "arg": "param"
            },
            "preferType": {
                "String": "string",
                "Number": "number",
                "Boolean": "boolean",
                "Symbol": "symbol",
                "object": "object",
                "function": "Function",
                "array": "Array",
                "date": "Date",
                "error": "Error",
                "null": "void"
            }
        }]
    }
}